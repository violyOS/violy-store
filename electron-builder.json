{
    "productName": "violyOS Store",
    "directories": {
        "output": "release/"
    },
    "files": [
        "**/*",
        "!**/*.ts",
        "!*.code-workspace",
        "!LICENSE.md",
        "!package.json",
        "!package-lock.json",
        "!src/",
        "!e2e/",
        "!hooks/",
        "!angular.json",
        "!_config.yml",
        "!karma.conf.js",
        "!tsconfig.json",
        "!tslint.json"
    ],
    "win": {
        "icon": "dist",
        "target": [
            "portable"
        ]
    },
    "mac": {
        "icon": "dist",
        "target": [
            "dmg"
        ]
    },
    "linux": {
        "icon": "dist",
        "category": "Utility",
        "target": [
            "AppImage",
            "deb",
            "rpm",
            "tar.gz"
        ]
    },
    "rpm": {
        "depends": ["libXtst6"]
    },
    "deb": {
        "depends": ["wget"]
    }
}
